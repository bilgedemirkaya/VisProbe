# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include API_OVERVIEW.md
include COMPREHENSIVE_API_REFERENCE.md
include DEVICE_MANAGEMENT.md
include RELEASE_CHECKLIST.md

# Include configuration files
include pyproject.toml

# Include examples
recursive-include examples *.py *.md

# Include test data/assets
include cat-image.jpeg

# Exclude compiled Python files and test artifacts from examples
global-exclude examples/*.json
global-exclude examples/*.csv
global-exclude examples/*.png

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
